#!/usr/bin/env python
import popen2,string,os
o,i=popen2.popen2("ipcs -s")
lines= o.readlines()
for l in lines:
    try:
        a=int(string.split(l)[1])
	print "Deleting semaphore set",a
	os.system("ipcrm -s %d"%a)	
    except:
	pass
#A=`ipcs -s`
#A=${A:11:18}
#ipcrm $A
print "Do you need to clear out /dev/shm?"
